{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": false
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-var": "error",
    "@typescript-eslint/camelcase": "off"
  }
}